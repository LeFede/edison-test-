---
import Meta from "../components/Meta.astro"
import "@fontsource-variable/inter"
import type { IAcademy } from "../env"

interface Props {
  academy: IAcademy;
}

const {academy} = Astro.props
const {mainColor, secondaryColor} = academy.style

---

<!doctype html>
<html lang="en">
	<head>
    <Meta
      title="fede"
      description="fede"
      image="https://avatars.githubusercontent.com/u/134017871?s=48&v=4.jpg"
      favicon="https://avatars.githubusercontent.com/u/134017871?s=48&v=4.jpg"
      url="https://avatars.githubusercontent.com/u/134017871?s=48&v=4"
    />
	</head>
  <body 
    class="font-inter bg-gray_25" 
    style={`--main-color: ${mainColor}; --secondary-color: ${secondaryColor};`}
  >
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

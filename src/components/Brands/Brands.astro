---
interface Props {
  classes: string;
}

const { classes } = Astro.props

const brands = [
  "kavak",
  "nu",
  "mercadolibre",
  "globant",
  "pedidosya",
] as const
---
<section class={`
    w-full flex p-4 py-10 z-30 relative
    lg:px-0 
  justify-center ${classes}
`}>
  <div class="
    container mx-auto flex items-center relative
    max-w-container flex-wrap m-auto
    lg:mx-[100px]-
  ">
    <div class="w-full h-28 lg:h-16">
      <h3 class="absolute text-xl">Nuestros instructores son <mark class="font-bold text-violet">referentes</mark> de las empresas m√°s innovadoras...</h3>
    </div>
    <div class="flex lg:h-[35px] lg:px-16 flex-wrap lg:w-full gap-y-4 mb-8 lg:gap-x-10 w-full">
      {brands.map((e) => <img 
        class="flex-auto p-[.35rem] w-1/3 h-[40px] lg:flex-1 lg:w-full lg:h-full lg:p-0" 
        src={`/brands/${e}.svg`} 
        alt={`${e} logo`} 
        loading="eager"
        width="128"
        height="40"
        srcset={`/brands/${e}.svg 1x, /brands/${e}.svg 2x`}
      />)}
    </div>
    <hr class="h-[1px] bg-dark w-full opacity-20"/>
  </div>
</section>
